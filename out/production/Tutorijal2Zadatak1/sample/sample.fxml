<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import java.net.*?>

<GridPane alignment="center" hgap="10.0" vgap="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="sample.Controller">
    <stylesheets>
        <URL value="@main.css"/>
    </stylesheets>

    <children>
        <Label fx:id="helloWorld" styleClass="label" GridPane.rowIndex="0" />
        <Button onAction="#ButtonClickHandler" styleClass="button" text="Say 'Hello World!'" GridPane.rowIndex="1" />
    </children>
</GridPane>
